<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project diatomas">
    <!--define folder properties-->
    <property name="dir.jarfile" value="."/>
	<property name="dir.lib" value="./lib"/>
	<property name="dir.temp" value="./build"/>
    <target name="create_run_jar">
    	<!-- Flatten and repack library files -->
    	<unzip dest="${dir.temp}">
            <fileset dir="${dir.lib}">
                <include name="**/*.jar" />
            </fileset>    
        </unzip>
    	<zip destfile="${dir.jarfile}/lib.zip">
    	    <zipfileset dir="${dir.temp}"/>
    	</zip>
    	<!-- Create jar -->
        <jar destfile="${dir.jarfile}/diatomas.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="ibm.Interface"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${dir.jarfile}/bin"/>
            <zipfileset excludes="META-INF/*.SF" src="/usr/lib/eclipse/plugins/org.hamcrest.core_1.3.0.v201303031735.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.jarfile}/lib.zip"/>
        </jar>
    </target>
</project>
